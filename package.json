  "bugs": {
    "url": "https://github.com/AustinClift/DigitalFlash/issues"
  },
  "homepage": "https://github.com/AustinClift/DigitalFlash",
  "devDependencies": {
    "bower": "^1.3.12",
    "grunt": "^0.4.5",
    "http-server": "^0.7.1",
    "karma": "^0.12.24",
    "karma-chrome-launcher": "^0.1.5",
    "karma-jasmine": "^0.1.5",
    "protractor": "^1.3.1"
  }
}
